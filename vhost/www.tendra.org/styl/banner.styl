/*
 * "The TenDRA Project" Banner
 */

/* intentionally off-grid */
h1#banner {
	margin: 0;
	padding-top: 1em;
	padding-bottom: 1.5em;

	font-size: ($grid-basefont * 1.125);
	line-height: ($grid-basefont * 2.5);
	letter-spacing: 1px;
	font-size: ($grid-basefont * 0.9);
	text-transform: lowercase;
	font-family: 'Palatino Linotype SC', serif;
}

h1#banner a {
	text-decoration: none;
}

h1#banner a:hover {
	text-decoration: underline;
	color: #000;
}

h1#banner span.logo {
	font-size: ($grid-basefont * 2.5);
	letter-spacing: 0;
	text-transform: none;
	font-family: 'Palatino Linotype', serif;
}

h1#banner span.smallcaps {
	text-transform: lowercase;
	font-family: 'Palatino Linotype SC', serif;
}

