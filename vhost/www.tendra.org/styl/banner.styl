/*
 * "The TenDRA Project" Banner
 */

/* intentionally off-grid */
h1#banner {
	margin: 0;
	padding-top: 1em;
	padding-bottom: 1.5em;

	font-size:   1.12em;
	line-height: 2.5em;
	font-size:   1.6em;

	font-feature-settings: "smcp" 1;
	font-feature-settings: "size" 1;
	font-feature-settings: "cpsp" 1;

	text-transform: lowercase;

	a {
		text-decoration: none;

		&:hover {
			text-decoration: underline;
			color: inherit;
		}
	}

	span.logo {
		font-size: 2.5em;

		font-feature-settings: "smcp" 0;

		text-transform: none;
	}

// XXX: rename to span.sc
	span.smallcaps {
// TODO: lighter weight, larger size?
		font-size: 1.1em;
	}

}

