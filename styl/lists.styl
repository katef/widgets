/* $Id$ */

$list ?= {
	gutter: 2em
}

ul, ol {
	margin:  0;
	padding: 0;
}

li {
	margin:  0;
	padding: 0;

	margin-left: $list.gutter;
}

dl {
	dt {
		margin: 0;
	}

	dd {
		margin-left:  $list.gutter;
		margin-right: 0;
		margin-top:	   ($baseline * 0.5);
		margin-bottom: ($baseline * 1.0);
	}

	dd:last-child {
		margin-bottom: 0;
	}
}

