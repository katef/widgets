/* $Id$ */

$overhead = $baseline * 0.75;

pre.synopsis {
	overflow-y: auto;
}

body {
	margin:  0;
	padding: 0;

	clearfix();
}

nav hr {
	clear: none;
}

header {
	& + p {
		margin-top: ($baseline * 1.5);
	}

	& + section h2 {
		margin-top: ($baseline * 1.5);
	}

	h1, h2 {
		line-height: ($baseline * 1.25);
	}

	padding-top:    ($baseline * 1.0 + $baseline * 0.25);
	padding-bottom: ($baseline * 0.0);
}

for $l in 0 .. length($grid.ncols) - 1 {
	$q = grid-breakpoint($grid, $l);
	@media $q {

		if (indent($l)) {
			section {
				margin-left: $indent;

				h2 {
					margin-left: -($indent);
				}
			}
		}

		ul.goals {
			margin-right: $list.gutter;

			column-count: listcols($l); // TODO: for @media print, too
			column-fill: balance;
			column-gap:   0px;
			column-rule: none;

			li:before { display: none; } // too visually noisy
		}

	}
}

