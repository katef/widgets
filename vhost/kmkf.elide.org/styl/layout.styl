/* $Id$ */

$overhead = $baseline * 0.75;

body {
	margin:  0;
	padding: 0;

	clearfix();
}

main {
	padding-bottom: ($baseline * 3);
//	min-height: 100%; // XXX: why not?
}

pre.synopsis {
	overflow-y: auto;
	margin-bottom: 0; // XXX: why?
}

// XXX: rehouse
nav {
	li {
		list-style-type: none;
		margin-bottom: 0;

		margin:  0;

		// TODO: share with bp
		a {
			text-decoration: none;
			display: block;

			padding: 0 $grid.gutter;
			line-height: $menu.height;

			span.command[data-refclass]:before {
				content: "<";
			}

			span.command[data-refclass]:after {
				content: "." attr(data-refclass) ">";
			}
		}
	}
}

nav hr {
	clear: none;
}

header {
	& + p {
		margin-top: ($baseline * 1.5);
	}

	& + section h2 {
		margin-top: ($baseline * 1.5);
	}

	h1, h2 {
		line-height: ($baseline * 1.25);
	}

	padding-top:    ($baseline * 1.0 + $baseline * 0.25);
	padding-bottom: ($baseline * 0.0);
}

for $l in 0 .. length($grid.ncols) - 1 {
	$q = grid-breakpoint($grid, $l);
	@media $q {

		body, ol.overlay#cols {
			grid-container($grid, $l);
		}

		body {
			width: auto;
		}

		nav {
			concertina-layout(menustyle($l));

			hr {
				display: none; // distracting for a compact menu
			}

			if (menustyle($l) == vertical) {
				grid-column($grid, $l, $grid.ncols[$l]);

				width: 100%;
				padding: 0;

				// cheesy trigram vertical centering
				a:after {
					position: relative;
					top: ($menu.height - ($trigram.size * 8));
				}

				ul {
					margin: 0;
				}

			} else {
				grid-column($grid, $l, sidebar($l));

				position: absolute;
				left: @margin-left;
				top: 0;

				min-height: 100%; // XXX

				padding-left:  0;
				padding-right: 0;

				ul {
					margin-left: 0;
				}

				// special case for *(5mk) block
				hr + nav.submenu li:first-child {
					margin-bottom: ($baseline / 2);
				}

				padding-top:    ($baseline * 2);
				padding-bottom: ($baseline * 1);
			}
		}

		main {
			grid-column($grid, $l, $grid.ncols[$l] - sidebar($l), sidebar($l));

			if (!sidebar($l)) {
				width: 100%;
			} else {
				float: none;
				max-width: 42em;

				shadow(0, 0, 20px, 0px, rgba(0,0,0,0.4));
				position: relative; // for z-index
				z-index: 2; // for shadow over nav menu
			}

			if (!sidebar($l)) {
				header {
					display: none;
				}
			}
		}

		if (indent($l)) {
			section {
				margin-left: $indent;

				h2 {
					margin-left: -($indent);
				}
			}
		}

		ul.goals {
			margin-right: $list.gutter;

			column-count: listcols($l);
			column-fill: balance;
			column-gap:   0px;
			column-rule: none;

			li:before { display: none; } // too visually noisy
		}

	}
}

