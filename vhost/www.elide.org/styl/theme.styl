/* $Id$ */

$fontsize = 14px;
$baseline = 19px;

$grid = {
	ncols:    ( 1       2      4      5      6      )
	layouts:  ( fluid   fluid  fluid  fixed  fixed  )
	aligns:   ( center  center center center center )

	colwidth: $baseline * 5.8 // wide enough for YYYY-MM-DD
	gutter:   $baseline / 2

	fixed-margin: 0
	fluid-margin: 0

	colour: #ccc
}

sidebar($l) { return $grid.layouts[$l] != fluid ? 1 : 0; }
gapless($l) { return $grid.ncols[$l] <= 2; }

menustyle($l) {
	if ($grid.ncols[$l] == 1) {
		return collapse;
	}

	if ($grid.ncols[$l] == 2) {
		return justify;
	}

	return center;
}

