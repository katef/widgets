/* $Id$ */

$glossary ?= {
	gutter:  $list.gutter || 2em
	padding: 1em
	border:  dotted 1px #ccc
	overlap: 1ex // a:hover vertical overlap relatve to li size
}

ol.glossary {
	padding: 0;
	margin:  0;

	clearfix();

	padding: $glossary.overlap 0;

	li {
		list-style-type: none;
		border-left: $glossary.border;
		padding: 0;
		cursor: default;
		float: left;

		&:first-child {
			border-left: none;
		}

		a {
			margin: -($glossary.overlap) 0;
			padding: ($glossary.overlap) 0;
		}
	}

	li,
	li a {
		display: inline-block;
		text-align: center;

		min-width: 2em;
		max-width: 3em;
	}
}

dl.glossary {
	dt {
		display: inline;
		float: left;
		padding-right: $glossary.padding;

		&.alt {
			padding-right: 1ex;

			&.alt:after {
				content: ", ";
			}
		}

		& + dd.abbr {
			margin-left: 0;

			&:before {
				content: ": ";
				margin-left: -($glossary.padding); /* to overlap the dt's padding-right */
			}
		}
	}

	dd {
		margin-top:    0;
		margin-left:   $glossary.gutter;
		margin-bottom: $baseline;
	}
}

