/* $Id$ */

$www-css       = "http://www.tendra.org/css";

$baseline = 18px;
$tabsize  = 4;

$grid-colour   = aliceblue;

$ncols    ?= ( 1      3      6      8      9      10     11     12     );
$layouts  ?= ( fluid  fluid  fluid  fixed  fixed  fixed  fixed  fixed  );
$aligns   ?= ( center center center center center center center center );

$colwidth ?= $baseline * 6;
$gutter   ?= $baseline / 2;

$fixed-margin ?= $gutter * 2;
$fluid-margin ?= $gutter * 1;

$grid = $ncols $layouts $aligns $colwidth $gutter $fixed-margin $fluid-margin;

$list-gutter = $gutter * 3;
$faq-gutter  = $list-gutter;
$cal-cell    = 2em;

$menu-border   = $gutter / 2;
$menu-delta    = $gutter;
$menu-colour   = $bp-grey;
$menu-time     = .25s;

$menu-height = $baseline * 1.5;

