@import "misc.styl";

$footer-height = $baseline / 2;

html {
	background-color: #fff;
	color: #000;
}

// abusing this for visual purposes
footer {
	height: 0px;
	display: block;
	clear: both;
	* {
		display: none;
	}
}

// :before is image background
// :after is tint for footer image to match menu tint
footer:before,
footer:after {
	content: " ";
	display: block;
	height: $footer-height;
	position: relative;
}

footer:after {
	top: -($footer-height);
}

header menu,
footer:after {
	background-color: rgba(0, 0, 0, 0.2);
}

footer:before, footer:after {
	height: $footer-height;
	display: block;
}

header,
footer:before {
	// colour set in theme.xsl for loading time
	background-repeat: no-repeat center center fixed;
	background-size: cover;
}

footer:before {
	background-position: center 90%;
}

header {
	color: lighten(#49b, 80%);
	background-position: center 45%;

	for $l in 0 .. length($grid.ncols) - 1 {
		$q = grid-breakpoint($grid, $l);
		@media $q {
			if ($grid.ncols[$l] == 1) {
				padding-top: ($baseline * 5); // for the background image
			} else if ($grid.ncols[$l] <= 2) {
				padding-top: ($baseline * 6);
			} else {
				padding-top: ($baseline * 8);
			}
		}
	}

	menu {
		a:link, a:visited {
			text-decoration: none;
			color: rgba(255, 255, 255, 0.5);
		}

		li.current a {
			color: rgba(255, 255, 255, 1.0);
		}

		li.current a:hover, a:hover {
			background-color: #fff;
			color: #000;
		}
	}
}

a code, a, a:link, a:visited {
	color: #0b367a;
	text-decoration: underline;

	*[title].important {
		border-color: @color;
	}
}

a:hover code, a:hover {
	color: #000;

	*[title].important {
		border-color: @color;
	}
}

section.page > dl.index dt a:hover {
	color: inherit;
	background-color: #eee;
}

section.archive-year,
article.entry {
	a:hover time {
		color: inherit;
	}

	time[pubdate] {
		color: #ccc;
	}
}

*[title].important {
	border-bottom: dotted 1px #888;
}

*[title] {
	cursor: help;
}

a *[title] {
	cursor: inherit;
}

::-moz-selection {
	background-color: #ddd;
}

::selection {
	background-color: #ddd;
}

span.noentries {
	color: #ccc;
}

