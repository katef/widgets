
font-face('Heros',             400, normal, '/fonts/Heros-Regular',          '#Heros-Regular');
font-face('Heros',             400, italic, '/fonts/Heros-Italic',           '#Heros-Italic');
font-face('Deja Vu Sans Mono', 400, normal, '/fonts/DejaVuSansMono-Regular', '#DejaVuSansMono-Regular');

/* faces, weights and styles */
body {
	font-family: Heros, Helvetica, Arial, sans;
	font-weight: 400;

	th {
		font-weight: normal;
	}

	em {
		font-weight: inherit;
		font-style:  italic;
	}

	h1, h2 {
		font-weight: inherit;
	}

	tt, code, pre {
		font-family: 'Deja Vu Sans Mono', monospace;
		font-weight: 400;
	}
}

/* sizes */
body {
	font-size:   $fontsize;
	line-height: $baseline;

	tt, code, pre {
		font-size: ($fontsize - 2px);
	}

	h2 {
		line-height: ($baseline * 1.25);
		font-size:   1.25em;
	}
}

/* alignment */
p, li, td, dd {
	text-align: justify;
}

/* features */
body {
	text-rendering: optimizeLegibility;

	p {
		font-feature-settings: "onum" 1;
		font-feature-settings: "lnum" 0;
	}

	pre {
		overflow-x: auto;
	}

	span.units, span.sc, em.sc {
		font-feature-settings: "c2sc" 1;
		font-weight: normal;
		font-style:  normal;
	}

	abbr {
//		font-feature-settings: "smcp" 1;
		font-feature-settings: "c2sc" 1;
		font-feature-settings: "onum" 0;
		font-feature-settings: "lnum" 1;
	}

	section.archive-year time[pubdate],
	article.entry time[pubdate] {
		font-feature-settings: "lnum" 1;
		font-feature-settings: "tnum" 1;
	}

	ol.pages {
		font-feature-settings: "lnum" 1;
	}

	ol.overlay#cols li:after {
		font-feature-settings: "onum" 0;
	}
}

