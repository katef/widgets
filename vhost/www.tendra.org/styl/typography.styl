div.body {
	padding: $grid-baseline 0;
}

a {
	text-decoration: underline;
	color: #000;
}

a:hover {
	color: blue;
}

body {
	color: #444;
	background-color: #fff;
	/* TODO: bitstream vera sans? dejavu? */
	font-family: 'Lucida Sans', 'Lucida Grande', verdana, tahoma, sans-serif;
	font-family: verdana, tahoma, sans-serif;
	font-size:   $grid-basefont;
	line-height: $grid-baseline;
}

body, p, dd {
    text-align: justify;
}

p {
	margin: 0 0 $grid-baseline 0;
}

blockquote {
	margin: 0 $grid-indent $grid-baseline $grid-indent;
	color: #999;
}

pre {
	margin: 0;
}

