/* $Id$ */

html.minidocbook {
	&.refentry main h1 {
		float: right;
	}

	div.navigation {
		color: #aaa;

		&.bottom {
			margin-top: 3em;
		}

		& ul.pages {
			float: right;
			pipelist();
		}
	}

	ol.toc {
		margin-left: 1em;
		list-style-type: none;

		li:before {
			content: none; // override custom bullet
		}
	}

	table.informal,
	table.informal td {
		border: none;
	}

	figure, table {
		margin: 2em;
	}

	table.informal {
		margin: 0;
	}

	table.revhistory {
		td.date,
		td.revnumber {
			white-space: nowrap;
		}
	}

	figure {
		img {
			display: block;
		}

		figcaption {
			margin-top: 1em;
			display: block;
		}
	}

	blockquote.literallayout {
		white-space: pre-line;
		tab-size: $tabsize;
	}

	div.warning:before {
		content: "Warning";
		font-weight: bold;
		display: inline-block;
		margin-bottom: 1ex;
	}

	blockquote, div.warning {
		margin: 2em 1em;
		padding: 0;
	}

	ol.footnotes {
		list-style-type: none;
		margin-left: 3em;
		margin-top:  3em;

		sup.footnote-number {
			position: absolute;
			width: 2em;
			margin-left: -2.5em;
		}
	}

	figure.table ol.footnotes {
		margin-top: 2em;
	}

	pre.screen {
		padding: 1ex 1em;

		div.lines {
			display: none;
		}
	}

	sup.footnote-number a {
		text-decoration: none;
	}

	section.synopsis {
		clearfix();

		p {
			clear: left;
			margin-bottom: 1ex;
		}

		p.cmdsynopsis {
			float: left;
		}

		div.args {
			display: block;
			float: left;

			color: #444;

			a {
				text-decoration: none;

				&:hover {
					text-decoration: underline;
				}
			}
		}
	}

	section.options dl {
		dt.narrow {
			float: left;
			clear: left;
		}

		dt {
			font-weight: bold;
		}

		dd {
			margin-bottom: 1em;
		}
	}

	section ul.authorgroup {
		list-style-type: none;
		display: inline;

		margin-left: 0;

		li {
			display: inline;

			margin-left: 0;

			&:after {
				content: "; ";
			}

			/* TODO: " and " for penultimate */

			&:last-child:after {
				content: ".";
			}
		}
	}
}

