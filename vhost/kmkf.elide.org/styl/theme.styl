/* $Id$ */

$fontsize = 14px;
$baseline = 20px;
$edgesize = $baseline;
$indent   = 2em;

$kmkf = {
	fg: #7c8 // #7b9
	bg: #222
}

$grid = {
	ncols:    ( 1     2     3     4     5     )
	layouts:  ( fluid fluid fluid fluid fixed )
	aligns:   ( left  left  left  left  left  )

	colwidth: $baseline * 7
	gutter:   $baseline * 1

	fixed-margin: 0
	fluid-margin: 0

	colour: lighten(spin($kmkf.fg, 90deg), 70%)
}

sidebar($l) { return $grid.ncols[$l] >= 4 ? 1 : 0; }
edge($l)    { return $grid.ncols[$l] == 1 ? top : left; }
indent($l)  { return $grid.ncols[$l] > 1; }

