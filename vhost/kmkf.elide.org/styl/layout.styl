/* $Id$ */

body {
	margin:  0;
	padding: 0;

	clearfix();
}

main {
	padding-bottom: ($baseline * 3);
	min-height: 100%;

//	outline: solid 1px #000;
}

nav {
//	border-left:  solid 1px #000;
}

pre.synopsis {
	overflow-y: auto;
	margin-bottom: 0; // XXX: why?
}

// XXX: rehouse
nav {
	min-height: 100%; // XXX

	li {
		list-style-type: none;
		margin-bottom: 0;

		margin:  0;

		// TODO: share with bp
		a {
			text-decoration: none;
			display: block;

			padding: 0 $grid.gutter;
			line-height: ($baseline * 1.5);

			span.command[data-refclass]:before {
				content: "<";
			}

			span.command[data-refclass]:after {
				content: "." attr(data-refclass) ">";
			}
		}
	}
}

html.man {
	nav hr {
		clear: none;
	}

	header#doctitle {
		& + p {
			margin-top: ($baseline * 1.5);
		}

		& + section h2 {
			margin-top: ($baseline * 1.5);
		}

		h1, h2 {
			line-height: ($baseline * 1.25);
		}

		padding-top:    ($baseline * 1.0 + $baseline * 0.25);
		padding-bottom: ($baseline * 0.0);
	}

}

for $l in 0 .. length($grid.ncols) - 1 {
	$q = grid-breakpoint($grid, $l, min);
	@media $q {

		body, ol.overlay#cols {
//			grid-container($grid, $l);
		}

		body {
			width: auto;
		}

		nav {
			concertina-layout(menustyle($l));
		}

		main {
//			grid-column($grid, $l, $grid.ncols[$l] - sidebar($l), sidebar($l));
		}

		if (sidebar($l)) {
			main {
float: none;
max-width: 42em;
			}
		} else {
main {
max-width: 100%;
}
		}

		if (sidebar($l)) {

			nav {
//				grid-column($grid, $l, sidebar($l));

position: absolute;
top: 0;
left: @margin-left;

				padding-left:  0;
				padding-right: 0;

				ul {
					margin-left: 0;
				}

				hr {
					display: none;
				}

				// special case for *(5mk) block
				hr + nav.submenu li:first-child {
					margin-bottom: ($baseline / 2);
				}

				position: absolute; // XXX: why?
				padding-top:    ($baseline * 2);
				padding-bottom: ($baseline * 1);
			}
		} else {
			nav {
//				grid-column($grid, $l, $grid.ncols[$l]);
				float: none;
			}
		}

		if (indent($l)) {
			section {
				margin-left: $indent;

				h2 {
					margin-left: -($indent);
				}
			}
		}

		ul.goals {
			margin-right: $list.gutter;

			column-count: listcols($l);
			column-fill: balance;
			column-gap:   0px;
			column-rule: none;

			li:before { display: none; } // too visually noisy
		}

	}
}

