/* main */

div.head, div.foot { border-color: #111; }
ul.sections li ul {
	border-top-color: #111;
	border-bottom-color: #111;
}
ul.sections > li:hover,
ul.sections > li:hover > a:hover {
	background-color: #111;
	color: #fff;
}


/* accents */

a tt {
	color: inherit;
}

a acronym.title:hover {
	color: inherit;
	border-bottom-color: #88f;
}

ul.sections > li:hover > a {
	color: #fff;
}

h1 {
	color: #222;
}

h2, h3, h4 {
	color: #aaa;
}

ul.sections li:hover ul a {
	color: #222;
}

ul.sections li > a:hover {
	color: #000;
}

div.timeline dt a em {
	color: #222;
}

