/*
 * Typography
 */

h1, h2, h3, h4, h5, h6, h7, h8, h9 {
	margin: 1em 0;
}

h1 {
	margin-top: 0.5em;
	padding-top: 0.25em;
}

h2 {
	margin-top: 1.5em;
}

h3 {
	margin-top: 1.5em;
}

h3, h4, h5, h6, h7, h8, h9 {
	margin-top: 1.5em;
}

a {
	text-decoration: underline;
	color: #000;
}

a:hover {
	color: blue;
}

body {
	color: #444;
	background-color: #fff;
}

hr {
	height: 1px;
	background-color: #eee;
	border: none;
}

b {
	color: #222;
}

em {
	font-style: normal;
	color: #000;
}

blockquote {
	margin: 2em 1.75em;
}

pre {
	padding: 1ex 1.75em;
	margin: 1.25em 0;
	border: solid 1px #ddd;
}

pre div.lines {
	float: left;
	border-right: solid 1px #ddd;
	background-color: #f7f7f7;
	color: #bbb ! important;
	margin-right: 1ex;
	padding: 1ex 0;
	padding-right: 1.5ex;
	padding-left: 1ex;
	margin: -1ex 0;
	margin-left: -1.75em;
	margin-right: 1ex;
}

div.code {
	border: none;
	padding: 0;
	margin: 0;
}

ul, ol {
	padding: 0 0.5em;
}

p {
	margin: 0;
	margin-bottom: 1em;
}

li p {
	margin: 1.5em 0;
}

li p:last-child {
	margin-bottom: 0;
}




/* TODO: sort this out... sortable tables stuff */
table th.table-sortable:hover {
	cursor: pointer;
	background-color: #eee;
}

table th.table-sortable:hover:after {
	color: #ccc;
}

table th.table-notype {
	border-color: darkred;
	background-color: pink;
}

table th.table-descending:after {
	content: "\25B2";
}

table th.table-ascending:after {
	content: "\25BC";
}

table th.table-sorted:after {
	min-width: 1em;
	padding-left: 1em;
	color: #ddd;
	display: block;
	float: right;
	cursor: pointer;
}

acronym.title {
	border-bottom: dotted 1px #888;
}

acronym.title:hover {
	border-bottom-color: #000;
	color: #000;
	cursor: help;
}

