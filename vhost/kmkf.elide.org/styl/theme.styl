/* $Id$ */

$www-css = "http://kxmf.elide.org/css";

$grid-colour = #dbf;

$fontsize = 13px;
$baseline = 20px;
$tabsize  = 4;

$grid = {
	ncols:   ( 1       4      5      7      )
	layouts: ( fluid   fluid  fixed  fixed  )
	aligns:  ( center  center center center )

	colwidth: $baseline * 6
	gutter:   $baseline * 2

	fixed-margin: $baseline * 2
	fluid-margin: $baseline * 2
}

$faq = {
	gutter: $grid.gutter * 2
}

$list = {
	gutter: $grid.gutter * 3
}

$cal-cell    = 2em;

