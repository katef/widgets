/* $Id$ */

/* XXX: tendra-specific concertina stuff */
for $l in 0 .. length($grid.ncols) - 1 {
	$q = grid-breakpoint($grid, $l);
	@media $q {
		if ($grid.ncols[$l] <= 3) {
			header nav {
				li a {
					background-color: lighten($menu.colour, 50%);
				}

				li.current a {
					/* trigram */
					&:after {
						color:        darken($menu.colour, 30%);
						border-color: darken($menu.colour, 30%);
					}

					&:hover:after {
						border-color: #fff;
					}
				}

				&.collapsed {
					& > li.current a {
						color: darken($menu.colour, 30%);
					}

					& > li:hover > a {
						background-color: #000;
						color: #fff;
					}
				}

				border-bottom: solid 0 $menu.colour;
			}
		}
	}
}

// TODO: centralise as menu block item
header nav a,
ul.menu a {
	text-align: left;
	display: block;
	padding: $menu.verts $menu.sides;
}

// TODO: centralise as menu block item
header nav li ul > li > a:hover,
header nav li.current > a,
ul.menu li a:hover {
	background-color: $menu.colour;
}

ul.menu,
header nav {
	a, a:hover {
		text-decoration: none;
	}
}

header nav ul {
	span.description {
		float: right;
		color: #aaa;
	}

	& > li:hover > a {
		background-color: #000;
		color: #fff;
	}

	& > li.current > a {
		font-weight: bold;
	}

	ul {
		background-color: #fff;

		li:hover a {
			color: #000;
		}
	}
}

// TODO: centralise as bulleted menu
ul.menu {
	list-style-type: none;
	margin:  0 0 $baseline 0;
	padding: 0;

	li {
		border-top: dotted $menu.border #ddd;
		margin: 0;

		&:first-child {
			border-top: none;
		}

		&.current a:before {
			color: #888;
		}

		a:before {
			content: "\25b8";
			color: #ddd;
			display: block;
			width: $baseline;
			float: left;
			clear: left;
			text-align: center;
		}

		a {
			color: #666;

			&:hover {
				color: #000;
			}
		}
	}
}

// TODO: centralise as dropdown menu
/* adapted from http://www.divitodesign.com/2008/09/how-to-dropdown-css-menu/ */
header nav > ul {
	margin-bottom: 0; // override baseline

	&,
	li > ul {
		list-style-type: none;
		z-index: 1;
	}

	li > ul {
		border-top:    solid $menu.bar #000;
		border-bottom: solid $menu.bar #000;
		display: none;
		position: absolute;
		background-color: #fff;
		min-width: 18em;

		margin:  0;
		padding: 0;

		top:  auto;
		left: auto;

		li {
			border-left:  solid $menu.border #ddd;
			border-right: solid $menu.border #ddd;

			margin: 0;

			a {
				padding-left:  ($menu.sides - $menu.border);
				padding-right: ($menu.sides - $menu.border);
			}
		}

		li.sep {
			border-bottom: solid $menu.border #ddd;
		}

		/*
		 * This is an overlapping box, to give the cursor something to aim for,
		 * so the menu doesn't vanish if you go just over the edge of its box.
		 * It's not clickable; it just holds the menu open by its :hover.
		 */
		&:after {
			content: "\A0";
			background-color: transparent;
			position: absolute;
			width:  100%;
			height: 100%;
			padding: $menu.bar 2em 4em 2em;
			top:  -($menu.bar);
			left: -2em;
			z-index: -1;
		}
	}

	li:hover ul {
		display: block;
	}
}

