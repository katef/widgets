/* $Id$ */

@import "tags.styl";
@import "colour.styl";

@import "grid.styl";
@import "baseline.styl";
@import "calendar.styl";
@import "blog.styl";
@import "layout.styl";
@import "pages.styl";
@import "screen.styl";

@import "theme.styl";

$pages-inact-border     = #ddd;
$pages-inact-background = transparent;
$pages-inact-color      = #bbb;

$pages-hover-border     = darken($pages-hover-background, 10%);
$pages-hover-background = #eee;
$pages-hover-color      = $black;

body {
	font-family: 'Maven Pro', 'sans serif';
	word-spacing: -1px;
}

tt, code, pre {
	font-family: 'Ubuntu Mono', 'monospace';
}

body {
	/* optimiseLegibility actually looks worse for Maven Pro. "Pro" indeed... */
	text-rendering: geometricPrecision;
}

h1 {
	font-weight: normal;
	text-align: left;
	text-rendering: optimizeLegibility;
}

body, td {
	text-align: justify;
}

body, th {
	font-weight: normal;
}

header ul#contents {
	list-style-type: none;
}

header ul#contents li {
	display: inline-block;
	margin-right: 1em;
}

nav#sidebar ol.years {
	list-style-type: none;
}

nav#sidebar ol.years li {
	display: block;
}

article.entry h1 {
	display: none;
}

article.entry ul.tags {
	display: none;
}

nav#monthindex > a {
	float: right;
}

