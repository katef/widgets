/* $Id$ */

$www-css = "http://www.elide.org/css";

$grid-baseline = 21px;
$grid-basefont = 15px;

$grid-colour  = pink;

$ncols    ?= ( 1       4      5     6      );
$layouts  ?= ( fluid   fluid  fixed fixed  );
$aligns   ?= ( center  center left  center );

$colwidth ?= $grid-baseline * 6; // wide enough for YYYY-MM-DD
$gutter   ?= $grid-baseline / 2;

$fixed-margin ?= $gutter;
$fluid-margin ?= 0;

$grid = $ncols $layouts $aligns $colwidth $gutter $fixed-margin $fluid-margin;


$cal-cell = 2em;

