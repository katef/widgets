body {
	color: #222;
	background-color: $kmkf.bg;
}

main {
	background-color: #fff;
	shadow(0, 0, 20px, 0px, rgba(0,0,0,0.4));
	z-index: 2;
position: relative;
}

nav {
position: absolute;
	z-index: 1;
}

a code, a, a:link, a:visited {
	color: darken(saturate($kmkf.fg, 20%), 20%);
	&:hover {
		color: $kmkf.bold;
	}
}

header {
	border-bottom: solid $kmkf.line $kmkf.fg;
	margin-bottom: -($kmkf.line); // baseline alignment
}

nav {
	background-color: desaturate(darken($kmkf.fg, 20%), 20%);
	background-color: $kmkf.bg;

	li.current {
		a, a:link, a:visited {
			background-color: darken(desaturate($kmkf.fg, 20%), 20%); // optical correction
			color: #fff;
		}
	}

	a, a:link, a:visited {
		color: #ddd;

		&:hover {
			background-color: darken(desaturate($kmkf.fg, 20%), 20%); // optical correction
			color: #fff;
		}
	}
}

pre, code, var, samp {
	color: $kmkf.code;
}

pre.synopsis {
/*
	$b = 0.5ex;
	$p = 0.5ex;
	color: #777;
	background-color: #f7f7f7;
	padding: $p;
	margin-left: -($b + $p);
	border: solid $b #efefef;
	border-radius: $b;
*/
}

pre.synopsis samp.replaceable {
	color: $kmkf.bold;
}

span.remark {
	color: $kmkf.bold;
}

::-moz-selection {
	background-color: lighten(desaturate($kmkf.fg, 60%), 70%);
}

::selection {
	background-color: lighten(desaturate($kmkf.fg, 60%), 70%);
}

