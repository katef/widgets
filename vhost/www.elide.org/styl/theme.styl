/* $Id$ */

$www-css = "http://www.elide.org/css";

$grid-colour = lighten(#0b367a, 20%);

$fontsize = 13px;
$baseline = 20px;
$tabsize  = 4;

$grid = {
	ncols:    ( 1       2      4      5      6      )
	layouts:  ( fluid   fluid  fluid  fixed  fixed  )
	aligns:   ( center  center center center center )

	colwidth: $baseline * 5.8 // wide enough for YYYY-MM-DD
	gutter:   $baseline / 2

	fixed-margin: 0
	fluid-margin: 0
}

$faq = {
	gutter: $grid.gutter * 2
}

$list = {
	gutter: $grid.gutter * 3
}

$cal-cell    = 2em;

$theme = ( );
for $l in 0 .. length($ncols) - 1 {
	$theme[$l] = {
		concertina: $grid.ncols[$l] >= 2 ? horizontal : vertical
		fish:       $grid.ncols[$l] >= 3 ? horizontal : vertical
	};
}

