$comment ?= {
	gutter:   $list.gutter || 1.0em
	baseline: $baseline    || 0.5em
	aside:    #aaa
}

form.comment.expandable {
	h2 {
		margin-top: 0;
		padding: 0;
		height: 2em;

		font-family: inherit;
		font-weight: inherit;
		font-style:  inherit;
		font-size:   inherit;

		a {
			cursor: pointer;
			padding: 0;
			display: block;
		}

		// TODO: use hang() for this
		&:before {
			margin-left: -2em;
			display: block;
			height: 0;
			text-align: right;
			width: 1.5em;
		}
	}

	// TODO: centralise with expander widget thingy
	// that should have the same arrow symbols as for dl/dt expander
	&.collapsed h2:before { content: "\21D2"; }
	&.expanding h2:before { content: "\21D8"; }
	&.expanded  h2:before { content: "\21D3"; }

	&.expanding {
//		height: 1.5em;
//		overflow: hidden;
	}

	&.collapsed {
		height: 2em;
		overflow: hidden;
	}

}

form.comment {
	input,
	textarea {
		margin-right: $comment.gutter;
	}

	label#stuff2 {
		display: none;
	}

	div.buttons {
		clear: left;
	}

	label {
		display: block;
		margin-bottom: $comment.baseline;
		clear: left;
	}

	textarea {
		margin-bottom: $comment.baseline;
		display: block;
/* XXX:
		max-width: 390px;
		width: 390px;
		float: left;
*/
	}

	aside.markup {
		display: inline-block;
/* XXX:
		max-width: 130px;
*/
//		height: 120px;
		margin-left: 10px;
	}

	aside.markup,
	aside.markup code {
		color: $comment.aside;
	/* TODO: inherit a "smaller" from baseline.styl */
	}

	input[type = "submit"],
	input[type = "button"] {
		display: inline-block;
		padding: 2px 10px;
	}
}

