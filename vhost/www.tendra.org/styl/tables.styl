/* $Id$ */

table {
	margin: -2px ($grid-indent - $baseline);	/* -2px for the borders */
	border-collapse: collapse;
	border-left: solid 1px #ddd;
	border-bottom: solid 1px #ddd;

	@media screen {

		th.table-sortable:hover {
			background-color: #eee;
		}

		th.table-sortable:hover:after {
			color: #ccc;
		}

		th.table-sorted:after {
			color: #ddd;
		}

	}

	th {
		background-color: #f7f7f7;
	}

	th.table-sorted:after {
		color: #ddd;
	}

	/*
	 * I can't find a way to space tables nicely, and keep them as multiples of the
	 * baseline. So I'm having them intentionally off-grid (perhaps a little
	 * ironic, for a table). Perhaps I can write some javascript which spaces their
	 * containing element to restore vertical rythm for following elements.
	 */
	th, td {
		padding: 0 ($grid-pad-sides - 1px);	/* -1px for the border */
//		line-height: ($baseline * 1.5 - 1px);	/* -1px for the border */
		font-size: ($grid-basefont - 1px);
		vertical-align: top;
		border-top: solid 1px #ddd;
		border-right: solid 1px #ddd;
		border-left: none;
		border-bottom: none;
// XXX: not line-height, because this doesn't work for tdftags(3)
	}
}

