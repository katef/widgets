
font-face('Deja Vu Sans',       400, normal, '/fonts/DejaVuSans-Regular',     '#DejaVuSans-Regular');
font-face('Deja Vu Sans Mono',  400, normal, '/fonts/DejaVuSansMono-Regular', '#DejaVuSansMono-Regular');
font-face('EB Garamond Twelve', 400, normal, '/fonts/EBGaramond12-Regular',   '#EBGaramond12-Regular');

/* faces, weights and styles */
body {
	font-family: Deja Vu Sans, Verdana, sans;
	font-weight: 400;

	th {
		font-weight: normal;
	}

	em {
		// TODO: maybe bold
		font-weight: inherit;
		font-style:  italic;
	}

	h1, h2 {
		font-family: EB Garamond Twelve, Minion Pro, Georgia, serif;
		font-weight: inherit;
	}

	h2 {
		text-transform: uppercase;
	}

	tt, code, pre {
		font-family: 'Deja Vu Sans Mono', monospace;
		font-weight: 400;
	}
}

/* sizes */
body {
	font-size:   $fontsize;
	line-height: $baseline;

	tt, code, pre {
		font-size: ($fontsize - 2px);
	}

	h1, h2 {
		letter-spacing: .25ex;
		word-spacing:   .25ex;
	}

	header h1 {
		font-size:   ($baseline * 1.3);
		line-height: ($baseline * 1.3);
	}

	h2 {
		font-size: ($fontsize * 1.125);
	}
}

/* alignment */
body {
	& {
		text-align: justify;
	}
}

/* features */
body {
	text-rendering: optimizeLegibility;

	pre {
		overflow-x: auto;
	}

//	font-feature-settings: "onum" 1;
//	font-feature-settings: "kern" 1;
//	font-feature-settings: "ss01" 0; /* single story 'a' */
//	font-feature-settings: "frac" 1;

	h1 {
//		font-feature-settings: "ss01" 1; /* double story 'a' */
//		font-feature-settings: "kern" 1;
//		font-feature-settings: "size" 1;
//		font-feature-settings: "lnum" 1;
//		font-feature-settings: "cpsp" 0;

		font-feature-settings: "smcp" 1;
	}

	span.units, span.sc, em.sc {
		font-feature-settings: "c2sc" 1;
		font-weight: normal;
		font-style:  normal;
	}

	abbr {
//		font-feature-settings: "smcp" 1;
		font-feature-settings: "c2sc" 1;

		/*
		 * I would set onum=0, lnum=1 to align numbers to small caps.
		 * But I can't find a way to get this font to do that, and so
		 * onum=1 looks better than numbers sticking out above small caps.
		 */
	}

	section.archive-year time[pubdate],
	article.entry time[pubdate] {
		font-feature-settings: "lnum" 1;
		font-feature-settings: "tnum" 1;
	}

	ol.pages {
		font-feature-settings: "lnum" 1;
	}

	ol.overlay#cols li:after {
		font-feature-settings: "onum" 0;
	}
}

