/* $Id$ */

$fontsize = 14px;
$baseline = 20px;
$edgesize = $baseline;

$grid = {
	ncols:    ( 1       4      5      7      )
	layouts:  ( fluid   fluid  fixed  fixed  )
	aligns:   ( center  center center center )

	colwidth: $baseline * 6
	gutter:   $baseline * 1

	fixed-margin: 0
	fluid-margin: 0

	colour: #dbf
}

