/* $Id$ */

$baseline = 18px;

$grid = {
	ncols:    ( 1      3      6      8      9      10     11     12     )
	layouts:  ( fluid  fluid  fluid  fixed  fixed  fixed  fixed  fixed  )
	aligns:   ( center center center center center center center center )

	colwidth: $baseline * 6
	gutter:   $baseline / 2

	fixed-margin: $baseline
	fluid-margin: $baseline / 2

	colour: aliceblue
}

$menu = {
	border: $grid.gutter / 2
	delta:  $grid.gutter
	colour: #eee
	height: $baseline * 1.5
	time:   .25s
}

sidebar($l)   { return $grid.ncols[$l] >= 8 ? 3 : 0; }
menustyle($l) { return $grid.ncols[$l] <= 3 ? vertical : horizontal; }

banner($l) {
	if ($grid.ncols[$l] == 1) {
		return 1;
	}

	if ($grid.ncols[$l] == 3) {
		return 2;
	}

	return 3;
}

