/* $Id$ */

.changelog {

	dl.paths {
		font-size: 90%;
		margin: 0;

		dt {
			font-weight: normal;
		}

		dd {
			margin-left: 0;
		}
	}

	ul.paths {
		list-style-type: none;
		padding-left: 1em;

		li {
			margin: 0;

			&.copy {
				display: table-row;

				a {
					display: table-cell;
				}

				a:first-child + a:before {
					content: " â†’ ";
					text-align: center;
					display: inline-block;
					width: 2em;
					margin-right: 0;
				}
			}

			&,
			a:before {
				line-height: inherit;
			}

			a:first-child:before {
				content: " ";
				display: inline-block;
				height: 1.5ex;
				width:  1.5ex;
				border: solid 1px transparent;
				margin-right:   0.5em;
				margin-bottom: -0.25ex; // centre within the line
			}
		}
	}

	dl.paths a,
	ul.paths li a {
		display: block;

		&, &:before:hover {
			color: #999;
		}

		&:hover {
			color: #000;
		}
	}

	ul.paths li a {
		&.svn-M:first-child:before { background-color: #ffd; border-color: #ee9; }
		&.svn-A:first-child:before { background-color: #dfd; border-color: #9e9; }
		&.svn-D:first-child:before { background-color: #fdd; border-color: #e99; }
		&.svn-R:first-child:before { background-color: #ddd; border-color: #999; }

		&.svn-M:first-child:hover:before { background-color: #ff9; border-color: #ee4; }
		&.svn-A:first-child:hover:before { background-color: #9f9; border-color: #4e4; }
		&.svn-D:first-child:hover:before { background-color: #f99; border-color: #e44; }
		&.svn-R:first-child:hover:before { background-color: #999; border-color: #444; }
	}

	aside.msg {
		white-space: pre-wrap;	/* XXX: placeholder until wiki parsing is done */
	}

	form.log label {
		display: block;
	}

}

