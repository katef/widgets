body {
	color: #222;
}

a code, a, a:link, a:visited {
	color: darken(saturate($kmkf.fg, 20%), 20%);
	text-decoration: underline;
	&:hover {
		color: #000;
	}
}

header {
	border-bottom: solid .5ex $kmkf.fg;
}

aside.meta {
	background-color: desaturate(darken($kmkf.fg, 20%), 20%);
	background-color: $kmkf.bg;

	a code, a, a:link, a:visited {
		color: #fff;

		&:hover {
			background-color: darken(desaturate($kmkf.fg, 20%), 10%); // optical correction
		}
	}
}

pre, code {
	color: #888;
}

pre.synopsis {
/*
	$b = 0.5ex;
