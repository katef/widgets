/* $Id$ */


h1, h2, h3 {
	font-weight: normal;
	margin: 0;
}

div.body h1 {
	letter-spacing: 0px;
}

div.body h2 {
	letter-spacing: 1px;
}

h1 {
	line-height: ($baseline * 3);
	font-size:   2.5em;
	margin: 0;
	margin-bottom: $baseline;
}

h2 {
	line-height: ($baseline * 3);
	font-size:   1.5em;
	color: #999;
	margin: 0;
}

h3 {
	font-size: 1em;
	font-weight: bold;
	color: #999;
}

h4 {
	font-size: 1em;
	font-weight: bold;
	color: #000;
}

