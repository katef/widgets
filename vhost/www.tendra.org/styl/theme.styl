/* $Id$ */

$baseline = 18px;

$grid = {
	ncols:    ( 1      3      6      9      12     )
	layouts:  ( fluid  fluid  fluid  fluid  fixed  )
	aligns:   ( center center center center center )

	colwidth: $baseline * 6
	gutter:   $baseline / 1.5

	fixed-margin: $baseline
	fluid-margin: $baseline / 2

	colour: aliceblue
}

$table ?= {
	verts:  0.5em
	sides:  $grid.gutter
	border: 1px
}

$menu = {
	verts:  $table.verts
	sides:  $table.sides
	border: $table.border
}

// tendra-specific
$nav = {
	bar:    $grid.gutter / 2
	colour: #eee
	height: $baseline * 2
	time:   .25s
}

sidebar($l)   { return $grid.ncols[$l] >  9 ? 3 : 0; }
menustyle($l) { return $grid.ncols[$l] <= 3 ? vertical : horizontal; }

banner($l) {
	if ($grid.ncols[$l] == 1) {
		return 1;
	}

	if ($grid.ncols[$l] == 3) {
		return 2;
	}

	return 3;
}

