/* $Id$ */

html.man {
	aside.meta hr {
		clear: none;
	}

	/* TODO: centralise */
	header#doctitle {
		clearfix();

		& + p {
			margin-top: ($baseline * 1.5);
		}

		& + section h2 {
			margin-top: ($baseline * 1.5);
		}

		h1, h2 {
			margin-top:     0;
			margin-bottom:  0;

			padding-top:    0;
			padding-bottom: 0;
			display: inline;

			line-height: ($baseline * 1.25);
		}

		h1 {
			float: left;
			span {
				padding-left: .5ex;
			}
		}

		h2 {
			float: right;
		}

		padding-top:    ($baseline * 1.0 + $baseline * 0.25);
		padding-bottom: ($baseline * 0.0);
	}

}

