/* $Id$ */

$www-css = "http://www.elide.org/css";

$grid-colour = aliceblue;

$fontsize = 13px;
$baseline = 20px;
$tabsize  = 4;

$ncols    ?= ( 1       2      4      5      6      );
$layouts  ?= ( fluid   fluid  fluid  fixed  fixed  );
$aligns   ?= ( center  center center center center );

$colwidth ?= $baseline * 5.8; // wide enough for YYYY-MM-DD
$gutter   ?= $baseline / 2;

$fixed-margin ?= 0;
$fluid-margin ?= 0;

$grid = $ncols $layouts $aligns $colwidth $gutter $fixed-margin $fluid-margin;

$list-gutter = $gutter * 3;
$faq-gutter  = $gutter * 2;
$cal-cell    = 2em;

